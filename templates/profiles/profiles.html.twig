
{%  extends 'base.html.twig' %}
{%  block stylesheets  %}
    {{  parent() }}
    <link rel="stylesheet" type="text/css" href="{{  asset('css/home.css') }}">
{% endblock %}
{%  block body %}




<body>



    <section class="companies-info">
        <div class="container">
            <div class="company-title">
                <h3>All Users</h3>
            </div><!--company-title end-->

            <div class="companies-list">
                <div class="row">
                    {%  for user in users %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="company_profile_info">
                            <div class="company-up-info">
                                {% if(user.profile.getProfilImg()) %}
                                    <img src="{{ asset('upload/user/'~ user.profile.getProfilImg())}}" alt="" width="100" height="100">


                                {% else %}
                                    <img src="{{  asset('images/100x100.png') }}" alt="" width="100" height="100">
                                {% endif %}
                                <h3>{{ user.firstname }} {{ user.lastname }}</h3>
                                <h4>{{ user.getProfile().getShortPresentation() }}</h4>
                                <ul>
                                    <li><a href="#" title="" class="follow">{{ user.getFollowers() | length }} Followers</a></li>


                                </ul>
                            </div>
                            <a href="{{  path('user_profil',{id:user.id}) }}" title="" class="view-more-pro">View Profile</a>
                        </div><!--company_profile_info end-->
                    </div>
                    {% endfor %}

                    </div>
                </div>

            </div><!--companies-list end-->
            <div class="process-comm">
                <div class="spinner">
                    <div class="bounce1"></div>
                    <div class="bounce2"></div>
                    <div class="bounce3"></div>
                </div>
            </div>
        </div>
    </section><!--companies-info end-->


</div><!--theme-layout end-->

{% endblock %}

{% block javascripts %}
    {{  parent() }}

{% endblock %}

