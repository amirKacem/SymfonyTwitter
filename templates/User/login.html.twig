{%  extends 'base.html.twig' %}
{% block body %}
<body class="sign-in">


<div class="wrapper">


    <div class="sign-in-page">
        <div class="signin-popup">
            <div class="signin-pop">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cmp-info">
                            <div class="cm-logo" style="text-align:center;margin-bottom:30px!important;">
                                <img src="images/logo_twitter_red.png" alt="" style="width:95%;height:200px;display:block;margin-left: auto;margin-right: auto;">
                                <p style="width:95%;">Twitter is a free social networking microblogging service that allows registered members to broadcast short posts called tweets.</p>
                            </div><!--cm-logo end-->
                            <img src="images/cm-main-img.png" alt="">
                        </div><!--cmp-info end-->
                    </div>
                    <div class="col-lg-6">
                        <div class="login-sec">
                            <ul class="sign-control">
                                <li data-tab="tab-1" class="current"><a href="#" title="">Sign in</a></li>
                                <li data-tab="tab-2"><a href="#" title="" onclick="pressBtnSignUp()" >Sign up</a></li>
                            </ul>
                            <div class="sign_in_sec current" id="tab-1">

                                <h3>Sign in</h3>
                                <form action="{{ path('login') }}" method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <div class="row">
                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="text" name="username" value="{{ username }}" placeholder="Username" required>
                                                <i class="la la-user"></i>
                                            </div><!--sn-field end-->
                                        </div>
                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="password" name="password" placeholder="Password" required>
                                                <i class="la la-lock"></i>
                                            </div>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                        <div class="col-lg-12 no-pdd">
                                            <div class="checky-sec">
                                                <div class="fgt-sec">
                                                    <input type="checkbox" name="_remember_me" id="c1">
                                                    <label for="c1">
                                                        <span></span>
                                                    </label>

                                                </div><!--fgt-sec end-->
                                                <a href="#" title="">Forgot Password?</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 no-pdd">
                                            <button class="d-block mx-auto" type="submit" value="submit">Sign in</button>
                                        </div>
                                    </div>
                                </form>


                            </div>
                        </div><!--login-sec end-->
                    </div>
                </div>
            </div><!--signin-pop end-->
        </div><!--signin-popup end-->

    </div><!--sign-in-page end-->


</div><!--theme-layout end-->
{%  endblock %}


{% block javascripts %}
   <script type="text/javascript">
     function pressBtnSignUp()
     {
        document.location.href = "register";
     }
   </script>

{% endblock %}
